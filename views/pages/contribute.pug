include ../partials/headerMixins
doctype html
html(lang="en")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="description" content=`Contribution page`)
        link(rel="stylesheet" type="text/css" href="/styles/contribute.css")
        link(rel="shortcut icon" href="/favicon.ico?v=2" type="image/x-icon")
        script(type="text/javascript" src="/scripts/contribute.js" defer)
        title Contribute
body
    if isContributer
        +logged-in-contributer-header()
    else
        +logged-in-header()

    div#main
        h1 Contribute

        form(action="/movies" method="POST")
            h2 Add a New Movie
            
            label Title:
            input(type="text" name="Title")

            label Genre:
            input(type="text" name="Genre")
            
            label Actors:
            input(type="text" name="Actor")

            label Writers:  
            input(type="text" name="Writer")
            
            label Directors:   
            input(type="text" name="Director")

            input.submit-button(type="submit" value="Submit")


        form
            h2 Add a New Person
        
            label(for="name") Name:
            input(type="text" name="name" id="name")

            input.submit-button(type="submit" onClick="addPerson(event)" value="Submit")
        
    
    include ../partials/footer