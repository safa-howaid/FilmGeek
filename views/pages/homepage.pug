include ../partials/headerMixins
doctype html
html(lang="en")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="description" content="FilmGeek's landing page with a list of the most popular movies.")
        link(rel="shortcut icon" href="/favicon.ico?v=2" type="image/x-icon")
        link(rel="stylesheet" type="text/css" href="/styles/homepage.css")
        title FlimGeek
body
    if loggedIn && isContributer
        +logged-in-contributer-header()
    else if loggedIn
        +logged-in-header()
    else
        +logged-out-header()

    div#main
        embed.logo-center(type='image/svg+xml', src='/images/logo.svg' alt="FilmGeek Logo")
        h2 Popular Movies
        .movie-poster-container
            each movie in movies
                a(href=`/movies/${movie._id}`)
                    img.movie-poster(src=movie.poster alt=`${movie.title} poster`)
        

    include ../partials/footer