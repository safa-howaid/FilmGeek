include ../partials/headerMixins
doctype html
html(lang="en")
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        meta(name="description" content="Registeration Page")
        link(rel="shortcut icon" href="/favicon.ico?v=2" type="image/x-icon")
        link(rel="stylesheet" type="text/css" href="/styles/register-page.css")
        title Register
        script.
            let errorMessage = "#{errorMessage}";
            if (errorMessage) {
                alert(errorMessage)
            }
body
    +logged-out-header()

    div#main
        .register-card
            h1 Register 
            hr
            form(action="/users", method="POST")
                label(for="username")  Username
                input.input-field(type="text" id="username" name="username" required)
                label(for="password") Password 
                input.input-field(type="password" id="password" name="password" required)
                label(for="confirm-password") Confirm Password
                input.input-field(type="password" id="confirm-password" name="confirmPassword" required)
                button.register-button(type="submit") Register

    include ../partials/footer