html
    head
        link(rel="stylesheet" type="text/css" href="/styles/login-page.css")
        title Login
body
    include ../partials/loggedOutHeader

    div#main
        .login-card
            h1 Login 
            hr
            form(action="/profile" method="GET")
                lable Username 
                input.input-field(type="text" id="username" name="username" required)
                label Password 
                input.input-field(type="password" id="password" name="password" required)
                input.login-button(type="submit" value="Login")
            
            .bottom-text
                p Don't have an account?
                a.signup-link(href="/register") Sign up here

    include ../partials/footer